{
  "name": "arv",
  "version": "1.0.1",
  "description": "Framework agnostic UI library - custom element UI",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec",
    "test.watch": "stencil test --spec --watch",
    "generate": "stencil generate"
  },
  "dependencies": {
    "diff": "^4.0.1",
    "prismjs": "^1.20.0",
    "tslint-ionic-rules": "^0.0.21"
  },
  "devDependencies": {
    "@stencil/core": "^1.13.0",
    "@types/jest": "^24.0.23",
    "jest": "26.0.1",
    "jest-cli": "26.0.1",
    "puppeteer": "^3.0.4",
    "workbox-build": "^4.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeric17/arv.git"
  },
  "author": "Marc Jeric Espiritu",
  "license": "MIT",
  "keywords": [
    "web component",
    "shadow dom",
    "ui kit",
    "stenciljs"
  ],
  "homepage": "https://jeric17.github.io/arv/",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
